#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/workspaces/Utopia/node_modules/.pnpm/node-static@0.7.11/node_modules/node-static/bin/node_modules:/workspaces/Utopia/node_modules/.pnpm/node-static@0.7.11/node_modules/node-static/node_modules:/workspaces/Utopia/node_modules/.pnpm/node-static@0.7.11/node_modules:/workspaces/Utopia/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/workspaces/Utopia/node_modules/.pnpm/node-static@0.7.11/node_modules/node-static/bin/node_modules:/workspaces/Utopia/node_modules/.pnpm/node-static@0.7.11/node_modules/node-static/node_modules:/workspaces/Utopia/node_modules/.pnpm/node-static@0.7.11/node_modules:/workspaces/Utopia/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../node-static/bin/cli.js" "$@"
else
  exec node  "$basedir/../node-static/bin/cli.js" "$@"
fi
